{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "bamboo-shoots": ["../src/index"],
            "bamboo-shoots/styles": ["../src/styles"]
        },
        "allowSyntheticDefaultImports": true,
        "jsx": "react-native",
        "lib": ["dom", "esnext"],
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true
    }
}
