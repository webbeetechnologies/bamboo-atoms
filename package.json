{
  "name": "@bambooapp/bamboo-atoms",
  "version": "0.0.19",
  "private": false,
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "repository": "git@github.com:webbeetechnologies/bamboo-atoms.git",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "prepare:husky": "husky install",
    "prepare": "bob build",
    "run:example": "yarn --cwd ./example start",
    "run:storybook": "yarn --cwd ./example storybook",
    "test:storybook": "yarn --cwd ./example test-storybook",
    "bootstrap": "yarn --cwd ./example && yarn",
    "bundle": "yarn prepare && mkdir -p dist && npm pack --pack-destination=dist",
    "do-release": "yarn publish dist/bambooapp-bamboo-atoms-$npm_package_version.tgz",
    "release": "yarn bundle && yarn do-release"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "2.0.0",
    "@types/lodash.isnil": "^4.0.7",
    "@types/react": "^18.0.17",
    "@types/react-native": "^0.69.5",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-native": "^0.69.4",
    "react-native-builder-bob": "^0.18.3",
    "react-native-web": "~0.18.7",
    "typescript": "^4.6.1-rc"
  },
  "peerDependencies": {
    "@types/react": "^16.6.0",
    "@types/react-native": "^0.60.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-native": "^0.60.0"
  },
  "dependencies": {
    "lodash.isnil": "^4.0.0",
    "ts-deepmerge": "^3.0.0"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ]
}
