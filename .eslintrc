{
  "extends": ["@react-native-community", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "tabWidth": 4,
        "printWidth": 100,
        "singleQuote": true,
        "jsxSingleQuote": false,
        "trailingComma": "all",
        "arrowParens": "avoid"
      }
    ],
    "no-bitwise": 0,
    "prefer-const": "warn",
    "no-console": ["error", { "allow": ["warn", "error"] }]
  },
  "plugins": ["@typescript-eslint", "prettier"]
}
